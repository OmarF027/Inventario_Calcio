<%- include('../partials/header', {title: 'Tutti gli Articoli'}) %>

<h2>üì¶ Tutti gli Articoli</h2>

<% if (locals.error) { %>
  <div style="background: #ffebee; color: #c62828; padding: 10px; margin: 10px 0; border-radius: 5px;">
    ‚ùå <strong>Errore:</strong> <%= error %>
  </div>
<% } %>

<a href="/articoli/nuovo" style="display: inline-block; margin-bottom: 20px; padding: 10px 15px; background: #28a745; color: white; text-decoration: none; border-radius: 3px;">
    ‚ûï Nuovo Articolo
</a>

<% if (articoli && articoli.length > 0) { %>
    <table border="1" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background: #f0f0f0;">
                <th style="padding: 10px;">ID</th>
                <th style="padding: 10px;">Nome</th>
                <th style="padding: 10px;">Descrizione</th>
                <th style="padding: 10px;">Quantit√†</th>
                <th style="padding: 10px;">Categoria</th>
                <th style="padding: 10px;">Azioni</th>
            </tr>
        </thead>
        <tbody>
            <% articoli.forEach(articolo => { %>
                <tr>
                    <td style="padding: 10px;"><%= articolo.id %></td>
                    <td style="padding: 10px;"><strong><%= articolo.nome %></strong></td>
                    <td style="padding: 10px;"><%= articolo.descrizione %></td>
                    <td style="padding: 10px; text-align: center;">
                        <span style="<%= articolo.quantita <= 2 ? 'color: red; font-weight: bold;' : '' %>">
                            <%= articolo.quantita %>
                        </span>
                    </td>
                    <td style="padding: 10px;"><%= articolo.categoria_nome || 'Nessuna' %></td>
                    <td style="padding: 10px;">
                        <div style="display: flex; gap: 5px; flex-wrap: wrap;">
                            <a href="/articoli/<%= articolo.id %>" 
                               style="padding: 5px 10px; background: #17a2b8; color: white; text-decoration: none; border-radius: 3px; font-size: 12px;">
                                üëÅÔ∏è Dettaglio
                            </a>
                            <a href="/articoli/<%= articolo.id %>/modifica" 
                               style="padding: 5px 10px; background: #ffc107; color: black; text-decoration: none; border-radius: 3px; font-size: 12px;">
                                ‚úèÔ∏è Modifica
                            </a>
                            <form action="/articoli/<%= articolo.id %>/elimina" method="POST" style="display: inline;">
                                <input type="password" name="adminPassword" placeholder="Password" 
                                       style="padding: 3px; margin-right: 5px; width: 80px; font-size: 11px;" required>
                                <button type="submit" 
                                        onclick="return confirm('Sei sicuro di voler eliminare <%= articolo.nome %>?')"
                                        style="padding: 5px 10px; background: #dc3545; color: white; border: none; border-radius: 3px; cursor: pointer; font-size: 12px;">
                                    üóëÔ∏è
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
    <div style="margin-top: 15px; padding: 10px; background: #f8f9fa; border-radius: 5px;">
        <strong>Totale articoli:</strong> <%= articoli.length %>
        <% 
            const inEsaurimento = articoli.filter(a => a.quantita <= 2).length;
            if (inEsaurimento > 0) { 
        %>
            | <strong style="color: red;">In esaurimento:</strong> <%= inEsaurimento %>
        <% } %>
        
    </div>
    
<% } else { %>
    <p>Nessun articolo trovato nel database.</p>
<% } %>

