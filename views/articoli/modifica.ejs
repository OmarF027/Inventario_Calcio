<%- include('../partials/header', {title: 'Modifica Articolo'}) %>

<h2>‚úèÔ∏è Modifica Articolo</h2>

<form action="/articoli/<%= articolo.id %>/aggiorna" method="POST" style="max-width: 500px;">
  <div style="margin-bottom: 20px;">
    <label for="nome" style="display: block; margin-bottom: 5px; font-weight: bold;">Nome Articolo:*</label>
    <input type="text" id="nome" name="nome" value="<%= articolo.nome %>" required 
           style="padding: 10px; width: 100%; border: 1px solid #ddd; border-radius: 4px;">
  </div>
  
  <div style="margin-bottom: 20px;">
    <label for="descrizione" style="display: block; margin-bottom: 5px; font-weight: bold;">Descrizione:</label>
    <textarea id="descrizione" name="descrizione" 
              style="padding: 10px; width: 100%; height: 80px; border: 1px solid #ddd; border-radius: 4px;"><%= articolo.descrizione %></textarea>
  </div>
  
  <div style="margin-bottom: 20px;">
    <label for="quantita" style="display: block; margin-bottom: 5px; font-weight: bold;">Quantit√†:*</label>
    <input type="number" id="quantita" name="quantita" min="0" value="<%= articolo.quantita %>" required 
           style="padding: 10px; width: 100px; border: 1px solid #ddd; border-radius: 4px;">
  </div>
  
  <div style="margin-bottom: 20px;">
    <label for="categoria_id" style="display: block; margin-bottom: 5px; font-weight: bold;">Categoria:*</label>
    <select id="categoria_id" name="categoria_id" required 
            style="padding: 10px; width: 100%; border: 1px solid #ddd; border-radius: 4px;">
      <option value="">-- Seleziona Categoria --</option>
      <% categorie.forEach(categoria => { %>
        <option value="<%= categoria.id %>" <%= articolo.categoria_id == categoria.id ? 'selected' : '' %>>
          <%= categoria.nome %>
        </option>
      <% }); %>
    </select>
  </div>
  
  <div>
    <button type="submit" style="padding: 12px 25px; background: #ffc107; color: black; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">
      üíæ Salva Modifiche
    </button>
    <a href="/articoli" style="margin-left: 15px; padding: 12px 25px; background: #666; color: white; text-decoration: none; border-radius: 4px; display: inline-block;">
      ‚ùå Annulla
    </a>
  </div>
</form>

<%- include('../partials/footer') %>