<%- include('../partials/header', {title: 'Categorie - Inventario Calcio'}) %>

<h2>📋 Tutte le Categorie</h2>

<% if (locals.error) { %>
  <div style="background: #ffebee; color: #c62828; padding: 10px; margin: 10px 0; border-radius: 5px;">
    ❌ <strong>Errore:</strong> <%= error %>
  </div>
<% } %>

<a href="/categorie/nuova" style="display: inline-block; margin-bottom: 20px; padding: 10px 15px; background: #0055a4; color: white; text-decoration: none; border-radius: 3px;">
    ➕ Nuova Categoria
</a>

<% if (categorie && categorie.length > 0) { %>
    <table border="1" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background: #f0f0f0;">
                <th style="padding: 10px;">ID</th>
                <th style="padding: 10px;">Nome</th>
                <th style="padding: 10px;">Descrizione</th>
                <th style="padding: 10px;">Azioni</th>
            </tr>
        </thead>
        <tbody>
            <% categorie.forEach(categoria => { %>
                <tr>
                    <td style="padding: 10px;"><%= categoria.id %></td>
                    <td style="padding: 10px;"><strong><%= categoria.nome %></strong></td>
                    <td style="padding: 10px;"><%= categoria.descrizione %></td>
                    <td style="padding: 10px;">
                        <div style="display: flex; gap: 5px; flex-wrap: wrap;">
                            <a href="/categorie/<%= categoria.id %>" 
                               style="padding: 5px 10px; background: #17a2b8; color: white; text-decoration: none; border-radius: 3px; font-size: 12px;">
                                👁️ Dettaglio
                            </a>
                            <a href="/categorie/<%= categoria.id %>/modifica" 
                               style="padding: 5px 10px; background: #ffc107; color: black; text-decoration: none; border-radius: 3px; font-size: 12px;">
                                ✏️ Modifica
                            </a>
                            <form action="/categorie/<%= categoria.id %>/elimina" method="POST" style="display: inline;">
                                <input type="password" name="adminPassword" placeholder="Password" 
                                       style="padding: 3px; margin-right: 5px; width: 80px; font-size: 11px;" required>
                                <button type="submit" 
                                        onclick="return confirm('Sei sicuro di voler eliminare <%= categoria.nome %>?')"
                                        style="padding: 5px 10px; background: #dc3545; color: white; border: none; border-radius: 3px; cursor: pointer; font-size: 12px;">
                                    🗑️
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
    <div style="margin-top: 15px; padding: 10px; background: #f8f9fa; border-radius: 5px;">
        <strong>Totale categorie:</strong> <%= categorie.length %>
        
    </div>
    
<% } else { %>
    <p>Nessuna categoria trovata nel database.</p>
<% } %>

<br>
<a href="/">← Torna alla Home</a>

<%- include('../partials/footer') %>